
@{
    ViewData["Title"] = "FrameContent";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Page</title>
    <link rel="stylesheet" href="~/css/core.css" />
</head>
<body>
    <div id="startWrap">
        <div id="startInner">
            <input id="usrName" type="type" name="name" value="" placeholder="Name" onfocus="this.placeholder=''" onblur="this.placeholder='Name'"/><br /><br />
            <button onclick="joinChat()">Connect</button>
        </div>
    </div>

    <div style="text-align:center;">
        <div style="position:absolute; right: 12px; top: -15px;"><span id="status"></span></div>
        <br />

            <div id="msgDisplayWrap">
                <div id="msgDisplay"></div>
            </div>


        <br />
        <input id="msgInput" type="text" />
        <!--<input id="sendMsgBtn" type="button" value="Send!" />-->


        <script src="~/js/core.js"></script>
    </div>

    <style>

        #startWrap {
            position: fixed;
            top: -10px;
            left: -10px;
            width: 110%;
            height: 110%;
            background-color: rgba(0, 0, 0, 0.7);
            z-index: 99;
        }

        #startInner {
            transition: 0.4s ease-in-out;
            width: 100%;
            margin: 0;
            text-align: center;
            position: absolute;
            top: 40%;

        }

        #usrName {
            text-align: center;
            padding: 5px;
            width: 200px;
            height: 30px;
            font-size: 20px;
            font-family: ag;
        }

        p {
            width: 450px;
            word-break: break-all;
        }

        html, body {
            overflow: hidden;
        }
        html {
            background-image: url("../img/stripes.png");
            background-repeat: repeat;

        }
        fieldset {
            width: 90%;
            height: 500px;
            margin: 0 auto;
        }

        #msgDisplayWrap {
            width: 460px;
            height: 500px;
            overflow: hidden;
            background-color: rgba(201, 76, 76, 0.3);
            padding: 5px;
            margin: 0 auto;
        }

        #msgDisplay {
            font-family: ag;
            width: 520px;
            height: 500px;
            overflow: scroll;
            overflow-x: hidden;
            text-align: left;
            color: rgba(255, 255, 255, 0.7);
        }

        #msgInput {
            color: rgba(255, 255, 255, 0.5);
            width: 465px;
            height: 30px;
            margin: 0 auto;
            background-color: rgba(105, 201, 129, 0.3) !important;
            -moz-box-shadow: inset 0 0 10px #000;
            -webkit-box-shadow: inset 0 0 10px #000;
            box-shadow: inset 0 0 10px #000;
            padding-left:5px;
        }

        .connected {
            color: rgba(107, 207, 133, 0.3);
            font-size: 50px;
            cursor: pointer;
        }
        .disconnected {
            color: rgba(196, 81, 106, 0.3);
            font-size: 50px;
            cursor: pointer;
        }
        .join {
            color: rgba(177, 170, 68, 0.5);
        }

    </style>

</body>
</html>
